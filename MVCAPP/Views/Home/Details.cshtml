@model WEBAPI.Models.Producto

@{
    ViewBag.Title = "Detalle producto";
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Sku)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sku)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fert)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fert)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Modelo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>

        <dd>
            @if (Model.Tipo == 0)
            {
                @Html.Raw("TRABAJO")
            }
            else if (Model.Tipo == 1)
            {
                @Html.Raw("DEPORTIVA")
            }
            else if (Model.Tipo == 2)
            {
                @Html.Raw("INFANTIL")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Serie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Serie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
            @Html.ValueFor(modelItem => Model.Fecha, "{0:dd/MM/yyyy}")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Editar", new { id = Model.ProductoId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
